<resources>
    <!-- Base application theme. -->
    <style name="Theme.Kore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Kore.DisabledOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.75</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Theme.Kore.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <style name="Theme.Kore.FieldRequiredText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/generic_panel_margin_full</item>
        <item name="android:layout_marginTop">@dimen/field_required_text_margin_top</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">@dimen/field_required_text_size</item>
    </style>

    <style name="Theme.Kore.ImageButtonBase" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/size_image_btn_preview_color</item>
        <item name="android:layout_height">@dimen/size_image_btn_preview_color</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_image_btn_preview_color</item>
        <item name="android:background">@drawable/background_8</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">@dimen/padding_image_btn_preview_color</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">@color/pastel_blue_purple</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.Kore.ImageButton.Top" parent="Theme.Kore.ImageButtonBase">
        <item name="android:background">@drawable/rounded_background_8_top</item>
        <item name="android:layout_marginTop">@dimen/margin_image_btn_preview_color</item>
    </style>

    <style name="Theme.Kore.ImageButton.Bottom" parent="Theme.Kore.ImageButtonBase">
        <item name="android:background">@drawable/rounded_background_8_bottom</item>
    </style>

    <style name="Theme.Kore.ImageButton.Left" parent="Theme.Kore.ImageButtonBase">
        <item name="android:background">@drawable/rounded_background_8_left</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:layout_marginVertical">@dimen/margin_image_btn_preview_color</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="Theme.Kore.ImageButton.Right" parent="Theme.Kore.ImageButtonBase">
        <item name="android:background">@drawable/rounded_background_8_right</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:layout_marginVertical">@dimen/margin_image_btn_preview_color</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!-- estilos formularios -->
    <style name="Theme.Kore.TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginVertical">4dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="editTextStyle">@style/Theme.Kore.TextFieldInner</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/pink_700</item>
        <item name="boxStrokeColor">@color/text_field_stroke_color</item>
        <item name="colorOutline">@color/pink_200</item>
    </style>

    <style name="Theme.Kore.TextFieldInner" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.Kore.ButtonFilled" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/pink_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Kore.ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/pink_700</item>
        <item name="android:textColor">@color/pink_700</item>
    </style>

    <style name="Theme.Kore.SmallButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/pink_900</item>
        <item name="iconTint">@color/pink_900</item>
    </style>

    <style name="Theme.Kore.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/generic_panel_margin_full</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:padding">@dimen/generic_btn_padding_full</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/generic_panel_margin_half</item>
        <item name="iconSize">@dimen/btn_icon_size</item>
    </style>
</resources>